{
  "name": "sfdc-org-compare",
  "version": "1.1.0",
  "description": "A client that uses the Salesforce Metadata API to compare metadata between two Orgs",
  "keywords": [
    "sfdc",
    "salesforce",
    "compare",
    "diff",
    "package",
    "organization"
  ],
  "license": "MIT",
  "dependencies": {
